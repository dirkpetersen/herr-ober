#!/bin/bash
# Ober wrapper script - finds and runs ober from pipx or venv installation
# Installed to /usr/local/bin/ober

# Check common locations for the real ober binary
for ober_path in \
    "/opt/pipx/venvs/herr-ober/bin/ober" \
    "/root/.local/pipx/venvs/herr-ober/bin/ober" \
    "/root/.local/share/pipx/venvs/herr-ober/bin/ober" \
    "$HOME/.local/pipx/venvs/herr-ober/bin/ober" \
    "$HOME/.local/share/pipx/venvs/herr-ober/bin/ober" \
    "/opt/ober/venv/bin/ober" \
    ; do
    if [ -x "$ober_path" ]; then
        exec "$ober_path" "$@"
    fi
done

echo "Error: ober not found in any known location." >&2
echo "Install with: sudo pipx install herr-ober" >&2
exit 1
